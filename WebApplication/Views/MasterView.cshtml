@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Tesla</title>
    <link rel="shortcut icon" href="~/Content/images/favicon.png">
    <link rel="stylesheet" href="/Content/css/styles.css" />
    <script src="//code.jquery.com/jquery-1.11.2.min.js"></script>
    <script src="/Content/js/scrypts.js"></script>
</head>
    <body>
        <div id="wrapper">
            <div id="header"><img src="/Content/images/Header.png" alt="Шапка"/></div>
            <div id="content">
                <div id="nav">
                    <ul>
                        <li><a title="Tesla" href="/Home/Index"><img src="/Content/images/Logo.jpg" alt="Tesla"/></a></li>
                        <li><a title="About us" href="/Home/About">About Tesla</a></li>
                        @Html.Action("Navigation","Home")
                    </ul>
                    <div id="map"><img src="/Content/images/Map.jpg" alt="Карта"/></div>
                </div>
                <div id="main">
                   @RenderBody()
                </div>
                @if (IsSectionDefined("Form"))
                {
                    @RenderSection("Form")
                }
            </div>
            <div id="footer"><footer>Tesla © 2020</footer></div>
        </div>
    </body>
</html>